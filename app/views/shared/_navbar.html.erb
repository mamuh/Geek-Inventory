  <!-- Initial Navbar -->
  <div class="d-flex justify-content-between align-items-center py-3 px-4 bg-white mb-2">
    <div class="container d-flex justify-content-between">
      <%= link_to root_path do  %>
        <%= image_tag("geek.png", :size => "150x45") %>
      <% end %>

      <% if user_signed_in? %>
        <div class="nav-items d-flex ">
          <ul class="navbar-nav">
            <li class="nav-item mr-3">
              <%= link_to "Sell item", new_item_path, class: "btn btn-info text-white" %>
            </li>
          </ul>
          <ul class="navbar-nav mr-auto">


            <li class="nav-item dropdown">

              <% if current_user.photo.attached? %>
                <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
                  aria-expanded="false" src="<%= cl_image_path current_user.photo.key %>" />
              <% else %>
                <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true"
                  aria-expanded="false" src="https://avatars1.githubusercontent.com/u/302001?s=88&v=4" />
              <% end %>

              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Profile", user_path(current_user.id), class: 'dropdown-item' %>
                <%= link_to "Browse shop", items_path, class: 'dropdown-item'  %>
                <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
              </div>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="nav-items d-flex align-items-center mr-3">
          <%= link_to "Login", new_user_session_path, class: "btn btn-black" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-black" %>
        </div>
      <% end %>
    </div>
  </div>
