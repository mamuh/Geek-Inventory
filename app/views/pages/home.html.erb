<div class="container">
  <div class="banner">
    <div class="container">
      <div class="cta">
        <h1 class="d-inline-block" id="banner-typed-text"></h1>
        <%= link_to "Browse Items", items_path, class: "btn btn-warning d-block" %>
        <%= link_to "Sell Item", new_item_path, class: "btn btn-warning d-block btn-sell-mobile" %>
      </div>
    </div>
  </div>


  <div class="text-center pb-3">
    <h4 class="home-header">Buy and sell your favourite items</h4>
    <p class="text-muted text-left">Choose from different items and categories. Try out some of them!</p>
    <div class="cards">
      <% @items.each do |item| %>
      <div class="card-trip">
        <%= link_to item_path(item) do %>
          <%= cl_image_tag item.photo.key, crop: :fit, width: 359, height: 200 %>
        <% end %>
        <%= link_to "Buy", item_transactions_path(item),method: :post, class: "btn-absolute" %>
        <div class="card-trip-infos">
          <div>

            <div class="card-info text-left">
              <h2><%= item.name %></h2>
              <%= link_to "Details", item_path(item) %>
            </div>
          </div>
          <div class="card-trip-princing text-right">
            <small class="text-muted"><%= item.category.name %></small>
            <h2>$ <%= item.price %>.00</h2>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
