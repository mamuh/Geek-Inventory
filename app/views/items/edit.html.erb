<% if current_user == @item.user %>
  <h1>Create Item</h1>
  <div class="container">
    <%= simple_form_for @item do |f| %>
      <%= f.input :name %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.association :category %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Update item", class: "btn btn-warning" %>
    <% end %>
  </div>
<% end %>
